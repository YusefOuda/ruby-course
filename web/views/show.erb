<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Artist</th>
    <th>Album</th>
    <th>Genre</th>
  </tr>
  <% @songs.each do |song| %>
    <tr>
      <td><%= song.id %></td>
      <td><%= song.title %></td>
      <td><%= song.artist %></td>
      <td><%= song.album %></td>
      <td><%= @genres.find { |genre| genre.id == song.genre_id }.name %></td>
    </tr>
    <% end %>
</table>
<form action="/show/genre" method="get">
<label for="genre-selector">Show songs by genre</label>
  <select id="genre-selector" name="genre-show-drop">
    <% @genres.each do |genre| %>
    <option value=<%="#{genre.name}"%>><%="#{genre.name}"%></option>
    <% end %>
  </select>
  <input type="submit">
</form>